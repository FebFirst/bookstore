<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.bookstore.model">
    <class name="Record" table="records">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="time" column="time" type="java.lang.String"/>
        <property name="customer_id" column="customer" type="java.lang.Integer"/>
        <property name="book_id" column="book" type="java.lang.String"/>
        <property name="number" column="number" type="java.lang.Integer"/>

    </class>
</hibernate-mapping>