<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.bookstore.model">
    <class name="Customer" table="customer">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="code" column="code" type="java.lang.String"/>
        <property name="role" column="role" type="java.lang.String"/>
        <property name="wallet" column="wallet" type="java.lang.Double"/>
        <property name="email" column="email" type="java.lang.String"/>
        <property name="phone" column="phone" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>